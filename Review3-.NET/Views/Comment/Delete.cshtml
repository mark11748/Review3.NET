@{
    ViewData["Title"] = "CREATE-POST";
    Layout = "_Layout";
}
@model Review3_.NET.Models.Comment

<h2>Are you sure you want to delete this comment?</h2>
<hr />
<div style="color:orange;font-family:monospace;">
    @Html.DisplayFor(x=>Model.Author)<br>
    @Html.DisplayFor(x=>Model.Body)<br>
</div>
<br>
@using (Html.BeginForm("Delete","Comment",FormMethod.Post,Model))
{
    <input type="hidden" name="PostId" value="@Model.PostId"> 
    <input type="hidden" name="Author" value="@Model.Author"> 
    <input type="hidden" name="Body" value="@Model.Body"> 
    <input type="hidden" name="Id" value="@Model.Id"> 

    <input type="submit" value="DELETE COMMENT" />
}
@Html.ActionLink("Back to List", "Index" , "Post")